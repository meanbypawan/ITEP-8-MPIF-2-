<html>
    <head>
        <title>Add product</title>
        <%-include("__bootstrap.ejs")%>
    </head>
    <body>
        <%-include("__header.ejs")%>
        <div class="container mt-5">
            <form action="/product/edit" method="post">
                <input type="hidden" value="<%=product.id%>" name="id"/>
                <div class="form-group">
                    <label>Product title</label>
                    <input value="<%=product.title%>" name="title" type="text" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input value="<%=product.price%>" name="price" type="text" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" class="form-control"><%=product.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-secondary" type="submit">Update product</button>
                </div>
            </form>
        </div>
    </body>
</html>